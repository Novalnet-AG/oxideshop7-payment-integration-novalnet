{% extends "email/html/order_cust.html.twig" %}

{% block email_html_order_cust_username %}
    {% if payment.oxuserpayments__oxpaymentsid.value == 'novalnetpayments' %}
        {% set sNovalnetComments = oViewConf.getNovalnetOrderComments(order.oxorder__oxordernr.value) %}
        {% if sNovalnetComments is not null %}
            <b>{{ translate({ ident: "NOVALNET_TRANSACTION_DETAILS" }) }}</b>
            {% set sComments =  sNovalnetComments | replace({"<br>":"\n" }) %}
            <p>{{ sComments | raw | nl2br }}</p>
        {% endif %}
        <br>
    {% endif %}
    {{ parent() }}
{% endblock %}
